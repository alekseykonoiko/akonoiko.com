    reverse_proxy localhost:5001

    # Caddy will automatically:
    # - Obtain SSL certificates from Let's Encrypt
    # - Handle HTTPS redirects (HTTP -> HTTPS)
    # - Provide secure headers
    # - Handle certificate renewal
}

